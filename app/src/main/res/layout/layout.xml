<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    >
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <EditText
            android:id="@+id/txtGiaspTruockhigiam"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="Giá trước khi giảm"
            app:layout_constraintHorizontal_bias="0.965"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.886"
            app:layout_constraintBottom_toTopOf="@+id/rbRatingsp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtGiasp"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="Giá (giá sau khi giảm)"
            app:layout_constraintHorizontal_bias="0.037"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.886"
            app:layout_constraintBottom_toTopOf="@+id/rbRatingsp"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:id="@+id/rbRatingsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.878"
            app:layout_constraintBottom_toTopOf="@+id/pagerHinhsp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_insert_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Chọn hình"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/rbRatingsp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.884"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/pagerHinhsp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtTensp"
            android:layout_width="368dp"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tên sản phẩm"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtGiasp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pagerHinhsp"
            android:layout_width="0dp"
            android:layout_height="325dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.382"
            app:layout_constraintTop_toTopOf="parent"></android.support.v4.view.ViewPager>

        <include layout="@layout/child_layout_custom2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="286dp"
            android:layout_width="390dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pagerHinhsp"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.095"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"></include>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
</LinearLayout>
